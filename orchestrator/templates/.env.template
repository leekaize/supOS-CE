# supOS Bedrock Service Stack Environment
# AUTO-GENERATED from config.json - DO NOT EDIT MANUALLY
# Regenerated on master container startup

# ==================== SYSTEM ====================
OS_PLATFORM_TYPE={{system.platform_type}}
OS_RESOURCE_SPEC={{system.resource_spec}}
OS_NAME={{system.name}}
OS_VERSION={{system.version}}
VOLUMES_PATH={{system.volumes_path}}

# ==================== NETWORK ====================
ENTRANCE_PROTOCOL={{network.protocol}}
ENTRANCE_DOMAIN={{network.domain}}
ENTRANCE_PORT={{network.port}}

# ==================== LOCALIZATION ====================
LANGUAGE={{localization.language}}

# ==================== MQTT ====================
OS_MQTT_TCP_PORT={{mqtt.tcp_port}}
OS_MQTT_WEBSOCKET_TSL_PORT={{mqtt.websocket_tls_port}}
USE_ALIAS_PATH_AS_TOPIC={{mqtt.use_alias_as_topic}}

# ==================== AUTHENTICATION ====================
OS_AUTH_ENABLE={{authentication.enabled}}
OS_LOGIN_PATH={{authentication.login_path}}

# OAuth/Keycloak Configuration
OAUTH_REALM={{authentication.oauth.realm}}
OAUTH_CLIENT_NAME={{authentication.oauth.client_name}}
OAUTH_CLIENT_ID={{authentication.oauth.client_id}}
OAUTH_CLIENT_SECRET={{authentication.oauth.client_secret}}
OAUTH_GRANT_TYPE={{authentication.oauth.grant_type}}
OAUTH_ISSUER_URI={{authentication.oauth.issuer_uri}}
OAUTH_REFRESH_TOKEN_TIME={{authentication.oauth.refresh_token_time}}

# ==================== LLM ====================
OS_LLM_TYPE={{llm.type}}
OPENAI_API_KEY={{llm.openai_api_key}}
OPENAI_API_MODEL={{llm.openai_api_model}}
LANGSMITH_API_KEY={{llm.langsmith_api_key}}

# ==================== LDAP ====================
LDAP_ENABLE={{ldap.enabled}}
LDAP_URL={{ldap.url}}
SYNC_USER_ENABLE={{ldap.sync_user_enabled}}

# ==================== SERVICE PASSWORDS ====================
# PostgreSQL
POSTGRES_PASSWORD={{services.postgres.password}}

# Keycloak
KC_BOOTSTRAP_ADMIN_USERNAME={{services.keycloak.admin_username}}
KC_BOOTSTRAP_ADMIN_PASSWORD={{services.keycloak.admin_password}}

# EMQX
EMQX_ADMIN_USERNAME={{services.emqx.admin_username}}
EMQX_ADMIN_PASSWORD={{services.emqx.admin_password}}
EMQX_NODE__COOKIE={{services.emqx.node_cookie}}

# Minio
MINIO_ACCESS_KEY={{services.minio.access_key}}
MINIO_SECRET_KEY={{services.minio.secret_key}}

# Portainer
PORTAINER_ADMIN_PASSWORD_HASH={{services.portainer.admin_password_hash}}

# Grafana
GF_SECURITY_ADMIN_PASSWORD={{services.grafana.admin_password}}

# Kong
KONG_PG_PASSWORD={{services.kong.db_password}}

# ==================== MCP CLIENT ====================
MCP_ENABLED={{mcp.enabled}}
AGENT_DEPLOYMENT_URL={{mcp.deployment_url}}
SUPOS_API_KEY={{mcp.supos_api_key}}
SUPOS_MQTT_URL=tcp://emqx:1883/mqtt

# ==================== ELASTICSEARCH ====================
ELASTICSEARCH_VERSION={{elasticsearch.version}}
ELASTICSEARCH_TIMEHORIZON={{elasticsearch.timehorizon_days}}

# ==================== FEATURES ====================
LAZY_TREE={{features.lazy_tree}}
ENABLE_CHAT2DB={{features.chat2db_enabled}}

# ==================== DERIVED VALUES ====================
# These are computed from other config values
SUPOS_API_URL={{network.protocol}}://{{network.domain}}:{{network.port}}
OAUTH_REDIRECT_URI={{network.protocol}}://{{network.domain}}:{{network.port}}/inter-api/supos/auth/token
OAUTH_SUPOS_HOME={{network.protocol}}://{{network.domain}}:{{network.port}}/home